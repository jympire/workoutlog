<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="panel panel-default">
      <div class="container">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= devise_error_messages! %>

        <h3>Sign up</h3>
          
          <br>

          <div class="form-group">
            <%= f.email_field :email, :placeholder => "Email address", class: "form-control", required: true %>
          </div>

          <div class="form-group">
            <%= f.password_field :password, autocomplete: "off", :class => "validate", :placeholder => "Create a password", class: "form-control", required: true %>
          </div>

          <div class="field">
            <%= f.password_field :password_confirmation, autocomplete: "off", :class => "validate", :placeholder => "Confirm password", class: "form-control", required: true %>
          </div>
          
          <br>

          <div class="actions">
            <%= f.submit "Sign up", :class => "btn btn-save btn-block" %>
          </div>
          
        <% end %>

        <hr>

        <center><span>Already have an account? <%= link_to "Log in", new_session_path(resource_name) %></span></center> 
        
        <br> 
      </div>  
    </div>
  </div>
</div>