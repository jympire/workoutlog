<div class="container content">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="panel panel-default">
        <div class="container">

          <br>

          <h3>Reset Password</h3>

          <br>

          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            <%= devise_error_messages! %>

            <p>Enter the email address associated with your account, and weâ€™ll email you a link to reset your password.</p>

            <br>

            <div class="form-group">
              <%= f.email_field :email, :placeholder => "Email", class: "form-control", required: true %>
            </div>

            <div class="actions">
              <span class="pull-left" style="margin: 15px;"><%= link_to "Back to Login", new_session_path(resource_name) %></span>
              <span class="pull-right"><%= f.submit "Reset password", :class => "btn btn-save" %></span><br><br>
            </div>

            <br>
            <br>

          <% end %>

        </div>
      </div>
    </div>
  </div> 
</div>


